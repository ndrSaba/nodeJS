{
  "name": "node",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint src/ --cache --fix",
    "test": "jest",
    "test:dev": "jest --watch",
    "build": "tsc",
    "build:dev": "tsc --watch",
    "start": "node --enable-source-maps dist/server.js",
    "start:dev": "nodemon --watch dist/ --watch .env",
    "dev": "npm run build && concurrently 'npm:build:dev' 'npm:start:dev'",
    "db:start": "sudo service postgresql start",
    "web": "serve -p 8080 web/",
  },
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Emiliano-S/node.js.git"
  },
  "bugs": {
    "url": "https://github.com/Emiliano-S/node.js/issues"
  },
  "homepage": "https://github.com/Emiliano-S/node.js#readme",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "concurrently": "^7.4.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.0.3",
    "nodemon": "^2.0.20",
    "prettier": "2.7.1",
    "prisma": "^4.3.1",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.3",
    "serve": "^14.0.1"
  },
  "dependencies": {
    "@prisma/client": "^4.3.1",
    "@sinclair/typebox": "^0.24.41",
    "ajv-formats": "^2.1.1",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "pg": "^8.8.0",
    "express-json-validator-middleware": "^3.0.1",
    "cors": "^2.8.5",
    "@types/multer": "^1.4.7",
    "mime": "^3.0.0",
    "multer": "^1.4.5-lts.1",
    "rxjs": "^7.5.6",
    "sqlite3": "^5.0.11",
    "passport": "^0.6.0",
    "passport-github2": "^0.1.12"
  }
}
